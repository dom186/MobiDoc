<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <!-- Top navigation buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#eaeaea">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/button_browse"
            android:layout_gravity="left|center_vertical"
            android:onClick="openBrowse"
            android:textSize="20sp"
            android:background="@drawable/my_button_left_off"
            android:textColor="@color/my_text_color_off"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Home"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:background="@drawable/my_button_middle_off"
            android:textColor="@color/my_text_color_off"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="openDashboard" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:background="@drawable/my_button_right"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Profile" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:background="#eaeaea"
        android:layout_weight="0.12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name:"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:id="@+id/textView3"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name:"
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company:"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager:"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:layout_height="30dp"
                android:text="Edit info"
                android:textSize="20sp"
                android:onClick="openEditInfo"
                android:background="@drawable/my_button_off"
                android:textColor="@color/my_text_color_off"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"
                android:textStyle="normal" />

            <Button
                android:layout_height="30dp"
                android:text="Change password"
                android:textSize="20sp"
                android:onClick="openChangePassword"
                android:background="@drawable/my_button_off"
                android:textColor="@color/my_text_color_off"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"
                android:textStyle="normal" />

        </LinearLayout>

    </TableLayout>

</LinearLayout>